{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    // Build niceties
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  },
  "include": ["src"],
  "exclude": [
    "**/*.test.*",
    "**/__tests__/**",
    "tests",
    "server"
  ]
}
