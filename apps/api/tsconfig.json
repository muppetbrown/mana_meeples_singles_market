{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",

    // ✅ Node ESM for the backend
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // ✅ Make resolution relative to apps/api, not repo root
    "baseUrl": ".",

    // ✅ Point @shared/* to the actual shared source
    "paths": {
      "@shared/*": ["../../utils/shared/src/*"]
    },

    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["src"]
}
