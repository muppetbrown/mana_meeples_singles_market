{
  "name": "@mana-meeples/api",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "clean": "rimraf dist",
    "dev": "tsx watch src/server.ts",
    "migrate": "node --loader tsx src/db/migrate.ts",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:unit": "vitest --dir tests/unit",
    "test:int": "vitest --dir tests/integration",
    "test:ci": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage && node ./scripts/print-coverage-summary.mjs"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "@types/nodemailer": "^7.0.2",
    "@types/pg": "^8.15.5",
    "@types/pino": "^7.0.5",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "pino": "^10.0.0",
    "typescript": "^5.9.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.7.1",
    "@types/dotenv": "^8.2.3",
    "pino-pretty": "^13.1.2",
    "tsx": "^4.20.6"
  }
}
