{
  "name": "mana-meeples-singles-market",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.11.0",
  "engines": {
    "node": "20.x",
    "pnpm": "9.x"
  },
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "typecheck": "pnpm -r --parallel run typecheck",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "format": "pnpm -r run format",
    "clean": "pnpm -r run clean && rimraf node_modules .turbo",
    "ci": "pnpm typecheck && pnpm lint && pnpm test && pnpm build",
    "build:render": "pnpm --filter ./apps/web run build && pnpm --filter ./apps/api run build && node scripts/copy-dist-to-api.js",
    "smoke": "node scripts/smoke.mjs",
    "export:schema": "tsx scripts/export-database-schema.ts",
    "debug:admin": "tsx scripts/debug-admin-login.ts",
    "generate:admin": "tsx scripts/generate-admin-hash.ts",
    "test:password": "tsx scripts/test-password.ts",
    "count:lines": "tsx scripts/line-lengths.ts --dir ./ --csv --ext ts,tsx",
    "deps:graph": "tsx scripts/deps-graph.ts --dir ./ --format mermaid"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@babel/types": "^7.28.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.22",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "fast-glob": "^3.3.3",
    "globby": "^15.0.0",
    "ignore": "^7.0.5",
    "pg": "^8.16.3",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "testcontainers": "^11.7.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.2"
  },
  "overrides": {
    "dev": "npm:@empty@0.0.0"
  }
}
