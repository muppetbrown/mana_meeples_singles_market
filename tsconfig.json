{
  "compilerOptions": {
    // Layout (uncomment when youâ€™re ready to emit)
    // "rootDir": "./src",
    // "outDir": "./dist",

    // Environment
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],

    // Migration helpers
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,

    // Output control (no .js emitted during migration)
    "noEmit": true,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    // Strictness & hygiene
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "jsx": "react-jsx"
  },
  "include": ["src", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules", "dist", "build"]
}
