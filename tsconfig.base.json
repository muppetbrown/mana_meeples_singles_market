{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["utils/shared/src/*"]
    },
    "allowJs": true,           
    "checkJs": false,
    "jsx": "react-jsx",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["apps", "utils", "scripts", "database", "types.d.ts"],
  "exclude": ["**/dist", "**/.next", "**/build"]
}